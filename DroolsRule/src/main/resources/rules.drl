import com.droolsruleengine.model.order; rule "Peak Hour Pricing for Cab" when order : Order( vehicleType == "cab" && (rideHour >= 7 && rideHour < 9 || rideHour >= 17 && rideHour < 19) ) then order.setPrice(order.getBasePrice() * 2.9); end rule "Normal Hour Pricing for Cab" when order : Order( vehicleType == "cab" && (rideHour < 7 || rideHour >= 9 && rideHour < 17 || rideHour >= 19) ) then order.setPrice(order.getBasePrice()); end
